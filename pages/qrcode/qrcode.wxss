/**index.wxss**/

.container {
  position: fixed;
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.content {
  margin-top: 140px;
  width: 280px;
  height: 300px;
  background: #fff;
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  box-sizing: border-box;
}

.mask {
  width: 100%;
  height: 100%;
  background: #74d8c9;
  position: absolute;
  opacity: 0.2;
  z-index: 2;
}

.qrcode-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-top: 40px;
}

.forbid {
  width: 100px;
  height: 100px;
  position: absolute;
}

.qrcode {
  width: 180px;
  height: 180px;
}

.qrcode-text-wrapper {
  box-sizing: border-box;
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 52px;
}

.qrcode-text-wrapper> view {
  width: 100%;
  height: 26px;
  line-height: 26px;
  text-align: center;
  color: #747575;
  letter-spacing: 2px;
}

.qrcode-text {
  margin-top: 10px;
  font-size: 16px;
}

.no-qrcode-text {
  font-size: 14px;
}

.no-qrcode-text :first-child {
  color: #74d8c9;
}
