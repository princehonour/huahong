/**index.wxss**/

.container {
  position: fixed;
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}

.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.content {
  margin-top: 280rpx;
  width: 448rpx;
  height: 480rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  box-sizing: border-box;
}

.mask {
  width: 100%;
  height: 100%;
  background: #74d8c9;
  position: absolute;
  opacity: 0.2;
  z-index: 2;
}

.qrcode-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-top: 40rpx;
}

.forbid {
  width: 100px;
  height: 100px;
  position: absolute;
}

.qrcode {
  width: 340rpx;
  height: 340rpx;
}

.qrcode-text-wrapper {
  box-sizing: border-box;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 52px;
}

.qrcode-text-wrapper> view {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #747575;
  letter-spacing: 4rpx;
}

.qrcode-text {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.no-qrcode-text {
  font-size: 28rpx;
}

.no-qrcode-text :first-child {
  color: #74d8c9;
}
