/**index.wxss**/

.container {
  padding: 0;
  position: fixed;
  background: #5ac8b7;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.title {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 20%;
  font-size: 34px;
  font-weight: bold;
  text-align: center;
  background-image: linear-gradient(to bottom, #fff 0%, #fff 50%, #5ac8b769 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.content {
  width: 88%;
  height: 55%;
  background: rgba(255, 255, 255, 1);
  border-radius: 6px;
  box-sizing: border-box;
  padding: 15px 20px;
}

.content-title {
  font-size: 26px;
  font-weight: 600;
  color: #5ac8b7;
  width: 80%;
  text-align: left;
  box-sizing: border-box;
  letter-spacing: 2px;
  margin-bottom: 20px;
}

.content >input {
  margin-top: 20px;
  box-sizing: border-box;
  width: 100%;
  border-bottom: 1px solid #9a9a9a83;
  height: 40px;
  padding-left: 30px;
}

.content >button {
  margin-top: 40px;
  color: #ffffff;
  font-size: 18px;
  letter-spacing: 10px;
  width: 100%;
  background: linear-gradient(180deg, rgba(40, 167, 147, 1), rgba(90, 200, 183, 1));
  border-radius: 6px;
  font-weight: 400;
}
