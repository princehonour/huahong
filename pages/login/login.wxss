/**index.wxss**/

.container {
  padding: 0;
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title {
  width: 100%;
  height: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title>image{
  width: 90%;
  height: 48px;
}

.content {
  width: 88%;
  height: 320px;
  background: rgba(255, 255, 255, 1);
  border-radius: 6px;
  box-sizing: border-box;
  padding: 15px 20px;
}

.content-title {
  font-size: 26px;
  font-weight: 600;
  color: #5ac8b7;
  width: 80%;
  text-align: left;
  box-sizing: border-box;
  letter-spacing: 2px;
  margin-bottom: 20px;
}

.content input {
  box-sizing: border-box;
  width: 100%;
  border-bottom: 1px solid #9a9a9a83;
  height: 40px;
  padding-left: 30px;
}

.content >button {
  margin-top: 40px;
  color: #fff;
  font-size: 18px;
  letter-spacing: 10px;
  width: 100%;
  background: linear-gradient(180deg, rgba(90, 200, 183, 1), rgba(40, 167, 147, 1));
  border-radius: 6px;
  font-weight: 400;
}

.input-wrapper {
  margin-top: 30px;
  display: flex;
  align-items: center;
  position: relative;
}

.icon {
  width: 14px;
  height: 16px;
  position: absolute;
}
