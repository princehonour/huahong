/**index.wxss**/

.container {
  position: fixed;
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding-top: 380rpx;
}

.bg {
  position: absolute;
  top: 0;
  width: 100%;
  height: 500rpx;
}

.banner-wrapper {
  box-sizing: border-box;
  padding: 0 38rpx;
  width: 100%;
}

.banner {
  width: 100%;
  height: 140rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  box-sizing: border-box;
  padding: 0 38rpx;
  margin-top: 20rpx;
}

.item-row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.first-item {
  color: #555656;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.item {
  width: 48%;
  height: 260rpx;
  border-radius: 12rpx;
  color: #fff;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  letter-spacing: 6rpx;
  font-size: 36rpx;
  box-shadow: 0px 0px 17px 4px rgba(168, 185, 182, 0.22);
}

.content image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.foot {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  padding: 0 38rpx;
  bottom: 0;
  margin-top: 10rpx;
}

.foot-content {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 17px 4px rgba(168, 185, 182, 0.22);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.foot-content>image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
}

.foot-content .text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff7575;
  letter-spacing: 6rpx;
}

.qrcode-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 16px 2px rgba(4, 87, 90, 0.22);
  border-radius: 50%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 40rpx;
  right: 40rpx;
  z-index: 2;
}

.qrcode {
  width: 60rpx;
  height: 60rpx;
}
