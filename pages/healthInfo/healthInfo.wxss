/**index.wxss**/

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20px;
}

.scroll {
  width: 100%;
  height: 100%;
}

.item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #9a9a9a0e;
  box-sizing: border-box;
  padding: 10px 0;
}

.key {
  color: #7c7c7c;
  max-width: 80%;
}

.submit {
  box-sizing: border-box;
  margin: 30px 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.normal {
  color: #fff;
  background: #5ac8b7;
  font-weight: 400;
}

.abnormality {
  color: #fff;
  background: #f76b85;
  font-weight: 400;
}
