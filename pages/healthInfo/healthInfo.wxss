/**index.wxss**/

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  padding: 0;
}

.no-content {
  width: 100%;
  height: 80%;
  font-size: 18px;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20px 0;
}

.scroll {
  width: 100%;
  height: 100%;
}

.item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom: 1px solid #9a9a9a0e;
  box-sizing: border-box;
  padding: 10px 20px;
}

.name {
  font-weight: bold;
}

.key {
  color: #7c7c7c;
  max-width: 50%;
  word-wrap: break-word;
}

.value {
  max-width: 50%;
  word-wrap: break-word;
}

.submit {
  box-sizing: border-box;
  margin: 30px 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.normal {
  color: #fff;
  background: #5ac8b7;
  font-weight: 400;
}

.abnormality {
  color: #fff;
  background: #f76b85;
  font-weight: 400;
}

.subTitle {
  background: #eaf1f1;
  width: 100%;
  height: 40px;
  color: #5ac8b7;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20px;
  font-weight: bold;
}
