/**index.wxss**/

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  padding: 0;
}

.no-content {
  width: 100%;
  height: 100%;
  font-size: 18px;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20px 0;
}

.scroll {
  width: 100%;
  height: 100%;
}

.item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom: 1px solid #f5f3f3;
  box-sizing: border-box;
  padding: 18rpx 38rpx;
  font-size: 34rpx;
  letter-spacing: 2rpx;
}

.name {
  font-weight: bold;
}

.key {
  color: #7c7c7c;
  max-width: 40%;
  word-wrap: break-word;
}

.value {
  max-width: 60%;
  word-wrap: break-word;
}

.submit {
  box-sizing: border-box;
  margin: 30px 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.normal {
  color: #fff;
  background: #5ac8b7;
  font-weight: 400;
}

.abnormality {
  color: #fff;
  background: #f76b85;
  font-weight: 400;
}

.subTitle {
  background: #eaf1f1;
  width: 100%;
  height: 80rpx;
  color: #5ac8b7;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 38rpx;
  font-weight: bold;
  font-size: 38rpx;
  letter-spacing: 2rpx;
}

.check-result {
  color: #4b4c4c;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 38rpx;
  letter-spacing: 4rpx;
}

.check-result image {
  width: 300rpx;
  height: 100rpx;
}

.check-result .text :first-child {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.check-result .text :last-child {
  font-size: 32rpx;
}

.validity-date {
  color: #4b4c4c;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 38rpx;
  letter-spacing: 4rpx;
}

.validity-date image {
  width: 160rpx;
  height: 160rpx;
}

.validity-date .text :first-child {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.validity-date .text :last-child {
  font-size: 32rpx;
}
