<view class="container">
  <view class="content" hidden="{{JSON.stringify(healthInfo) === '{}'}}">
    <view>搜索</view>
    <scroll-view scroll-y="true" class="scroll">
      <block wx:for="{{records}}" wx:key="index">
        <view class="item">
          <view class="item-head">
            <view>{{item.checkTime}}</view>
            <view>{{item.checkStatus}}</view>
          </view>
          <view class="seperator"></view>
          <view class="item-body">
            <view>
              <view>姓名</view>
              <view style="font-weight:bold;letter-spacing:0.1rem">{{item.name}}</view>
            </view>
            <view>
              <view>车牌号码</view>
              <view style="font-weight:bold;letter-spacing:0.1rem">{{item.plateNum}}</view>
            </view>
            <view>
              <view>电话号码</view>
              <view>{{item.phoneNum}}</view>
            </view>
            <view>
              <view>填报时间</view>
              <view>{{item.submitTime}}</view>
            </view>
          </view>
        </view>
      </block>
    </scroll-view>
  </view>
  <view class="no-content" hidden="{{!(JSON.stringify(healthInfo) === '{}')}}">
    暂无信息
  </view>
</view>